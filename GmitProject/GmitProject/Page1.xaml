<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GmitProject.Page1">
    <Grid x:Name="page1" Margin="5,5,5,5" HorizontalOptions="Center"
          WidthRequest="400">
        <!--Make rows and columns-->

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--pickup date method-->
        <DatePicker Format="D"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="10,0" BackgroundColor="Goldenrod" />

        <Grid x:Name="topGrid" Grid.Row="0" Grid.Column="0">
            <Label Text="Accomodation" FontSize="Large" HorizontalOptions="Center" ></Label>

        </Grid>
        <!--coding for bottom grid display for buttons 

        <Grid x:Name="bottomGrid" Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
