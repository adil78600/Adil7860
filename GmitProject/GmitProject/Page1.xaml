        <!--setup button with images-->
        <ImageButton x:Name="gmit" BackgroundColor="Blue"  Source="gmit.png" HeightRequest="20"  WidthRequest="70"  
                     Grid.Row="1" Grid.Column="0" Clicked="Gmit_Clicked"></ImageButton>

        <ImageButton x:Name="west" BackgroundColor="HotPink" Source="west.png" HeightRequest="20"  WidthRequest="70" 
                     Grid.Row="2" Grid.Column="0" Clicked="West_Clicked" ></ImageButton>

        <ImageButton x:Name="snoozels" BackgroundColor="GreenYellow"  Source ="snooz.png" HeightRequest="20" 
